@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Inputs
@using SoundCore.Domain.Entities
@using SoundCore.Application.Features.Rooms.Models
@using SoundCore.Domain.Enum
@using Syncfusion.Blazor.DropDowns



<SfGrid @ref="RoomDatagrid" AllowPaging="true" Toolbar="@(new List<string>() { "Add", "Edit", "Delete","Search" })" TValue="RoomModel" DataSource="RoomsView">
    <GridEditSettings AllowAdding="true" AllowEditing="true" AllowDeleting="true" Mode="EditMode.Dialog" ShowDeleteConfirmDialog="true">
        <Template>
            @{
                var room = (context as RoomModel);
                <RoomsManagementDialogModel @bind-SelectedRoom="room"></RoomsManagementDialogModel>
            }
        </Template>
        <Validator>
            <DataAnnotationsValidator></DataAnnotationsValidator>
        </Validator>
    </GridEditSettings>
    <GridEvents TValue="RoomModel" OnActionBegin="ActionBegin"></GridEvents>

</SfGrid>


